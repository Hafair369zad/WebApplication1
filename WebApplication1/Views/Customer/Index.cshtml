@model IEnumerable<WebApplication1.Models.CustomerTb>

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List</h2>

<p>
    <a href="@Url.Action("Create")">Create New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerName</td>
                <td>@customer.Address</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = customer.CustomerId })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = customer.CustomerId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
